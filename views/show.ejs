<% include partials/header %>
<div class="ui main text container segment">
  <h1 class="ui huge header">
    <%= blog.title %>
  </h1>
  <div class="ui top attached blue segment">
    <div class="item">
      <div class="image">
        <img class="ui centered large rounded image" src="<%= blog.image %>">
      </div>
      <div class="content">
        <div class="description">
          <%# Comment tag, no execution, no output %>
          <%# %- -> show the html format %>
          <p><%- blog.body %></p>
        </div>
        <div class="extra">
          <span>
            <%= blog.created.toDateString() %>
          </span>
        </div>
      </div>
    </div>
  </div>
  <hr>
  <a class="ui basic green button" href="/blogs/<%= blog._id %>/edit">Edit</a>
  <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
    <button class="ui basic red button">Delete</button>
  </form>
</div>
<% include partials/footer %>